@model StudentInfo.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-dark">Edit</h1>

<h4 class="text-dark">Student</h4>
<hr class="bg-dark" <hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label text-dark"></label>
                <input asp-for="Name" class="form-control bg-dark text-light" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label text-dark"></label>
                <input asp-for="Age" class="form-control bg-dark text-light" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label text-dark"></label>
                <input asp-for="Semester" class="form-control bg-dark text-light" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Batch" class="control-label text-dark"></label>
                <input asp-for="Batch" class="form-control bg-dark text-light" />
                <span asp-validation-for="Batch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-dark">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
