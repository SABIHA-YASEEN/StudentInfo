@model IEnumerable<StudentInfo.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentInfo.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <h1 class="text-light">Index</h1>

    <p>
        <a asp-action="Create" class="text-light">Create New</a>
    </p>
    <table class="table table-dark">
        <thead>
            <tr>
                <th class="text-light">Name</th>
                <th class="text-light">Age</th>
                <th class="text-light">Semester</th>
                <th class="text-light">Batch</th>
                <th class="text-light"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                            <td class="text-light">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-light">@Html.DisplayFor(modelItem => item.Age)</td>
                            <td class="text-light">@Html.DisplayFor(modelItem => item.Semester)</td>
                            <td class="text-light">@Html.DisplayFor(modelItem => item.Batch)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-light">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-light">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-light">Delete</a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</body>
</html>
